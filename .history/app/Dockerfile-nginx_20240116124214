# Stage 1: Build the Nginx configuration
FROM nginx:1.21-alpine AS builder

# Copy the Nginx configuration file to the container
COPY nginx.conf /etc/nginx/nginx.conf

# Stage 2: Use the built configuration in a smaller image
FROM nginx:1.21-alpine

# Copy the Nginx configuration from the previous stage
COPY --from=builder /etc/nginx/nginx.conf /etc/nginx/nginx.conf

# Expose port 8080 to the world outside this container
EXPOSE 8080

# Start Nginx when the container launches
CMD ["nginx", "-g", "daemon off;"]
